<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item_cv_member"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_padding_size_small"
    android:paddingBottom="@dimen/margin_padding_size_small"
    app:cardBackgroundColor="@color/bg_card_50_opac_black"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_padding_size_medium"
        android:paddingBottom="@dimen/margin_padding_size_medium"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_team_member_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/md_grey_50"
            app:civ_border_width="3dp"
            tools:src="@drawable/sky"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_team_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/margin_padding_size_small"
            android:textColor="@color/md_green_500"
            tools:text="Mairingdao Hojai"/>

        <TextView
            android:id="@+id/tv_team_member_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/md_grey_100"
            tools:text="Lead Android Developer"/>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>