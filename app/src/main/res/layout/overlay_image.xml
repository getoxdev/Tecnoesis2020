<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/tv_overlay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:text="@tools:sample/lorem"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_padding_size_large"
        android:textSize="@dimen/text_size_large"
        android:layout_marginBottom="@dimen/margin_padding_size_large"
        android:paddingStart="@dimen/margin_padding_size_medium"
        android:paddingEnd="@dimen/margin_padding_size_medium"
        android:fontFamily="@fonts/lora_bold"
        android:textColor="@color/md_grey_100"
        />

        <com.github.tenx.tecnoesis20.views.ExpandableTextView
            android:id="@+id/tv_overlay_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_padding_size_large"
            tools:text="@string/lorem_180"
            android:linksClickable="true"
            android:autoLink="web"
            android:layout_alignParentBottom="true"
            android:maxLines="12"
            android:nestedScrollingEnabled="true"
            android:textColorLink="@color/md_blue_700"
            android:paddingStart="@dimen/margin_padding_size_medium"
            android:paddingEnd="@dimen/margin_padding_size_medium"
            android:fontFamily="@fonts/lora_regular"
            android:textColor="@color/md_grey_200"
            android:background="@color/bg_card_85_opac_black"

            android:scrollbars="vertical"
            />
        


</RelativeLayout>