<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginRight="@dimen/margin_padding_size_small"
    android:layout_marginLeft="@dimen/margin_padding_size_small"
    android:layout_marginBottom="@dimen/margin_padding_size_small"
    app:cardBackgroundColor="@color/bg_card_50_opac_black">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_module_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            android:paddingStart="@dimen/margin_padding_size_medium"
            android:paddingEnd="@dimen/margin_padding_size_medium"
            android:paddingBottom="@dimen/margin_padding_size_small"
            android:textColor="@color/md_grey_50"
            android:background="@color/bg_card_50_opac_black"
            android:fontFamily="@font/lora_bold"
            android:textSize="@dimen/text_size_large"
            />

        <ImageView
            android:id="@+id/iv_module_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:adjustViewBounds="true"
            android:layout_below="@id/tv_module_name"
            android:layout_gravity="center"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/iv_module_image"
            android:background="@color/bg_card_25_opac_black"
            android:layout_marginStart="@dimen/margin_padding_size_large"
            android:layout_marginEnd="@dimen/margin_padding_size_large"
            >

            <TextView

                android:id="@+id/tv_module_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_180"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/md_grey_100"
                android:fontFamily="@fonts/lora_regular"
                android:padding="@dimen/margin_padding_size_medium"
                android:textSize="@dimen/text_size_medium"


                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_events_module_item_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/module_btn_text"
                android:layout_gravity="end"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginRight="@dimen/margin_padding_size_medium"
                android:layout_marginLeft="@dimen/margin_padding_size_medium"
                />
        </LinearLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>