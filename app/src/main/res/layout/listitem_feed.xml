<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_size_small"
    app:cardBackgroundColor="@color/bg_card_50_opac_black">
    <LinearLayout  android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_feed_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/sky"
            android:layout_marginBottom="@dimen/margin_padding_size_small"
            />

        <TextView
            android:id="@+id/tv_feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23 oct 2:00pm"
            android:textColor="@color/md_grey_400"
            android:layout_marginStart="@dimen/margin_padding_size_medium"
            />
        <com.github.tenx.tecnoesis20.views.ExpandableTextView
            android:id="@+id/tv_feed_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/lorem_180"
            android:textColor="@color/md_grey_100"
            android:maxLines="4"
            android:paddingStart="@dimen/margin_padding_size_medium"
            android:paddingEnd="@dimen/margin_padding_size_medium"
            android:linksClickable="true"
            android:autoLink="web"
            android:textColorLink="@color/md_blue_600"
            />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>