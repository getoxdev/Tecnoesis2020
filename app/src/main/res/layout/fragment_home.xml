<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    >

    <com.victor.loading.newton.NewtonCradleLoading
        android:id="@+id/progress_loading"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"

        >
    </com.victor.loading.newton.NewtonCradleLoading>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:tint="#6F0C0000"
            android:scrollbars="vertical"
            android:orientation="vertical"
            tools:context=".ui.main.home.HomeFragment"
            >
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slider_home_events"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="20dp"
                app:sliderAnimationDuration="500"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true"
                android:padding="3dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_home_sponsors_container"
                android:background="@color/bg_card_50_opac_black"
                android:layout_marginBottom="@dimen/margin_padding_size_small"
                >

                <TextView
                    android:id="@+id/tv_home_sponsors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_card_50_opac_black"
                    android:paddingStart="@dimen/margin_padding_size_medium"
                    android:paddingTop="@dimen/margin_padding_size_small"
                    android:paddingEnd="@dimen/margin_padding_size_medium"
                    android:fontFamily="@font/lora_bold"
                    android:paddingBottom="@dimen/margin_padding_size_small"
                    android:text="OUR PARTNERS"
                    android:textColor="@color/md_grey_50"
                    android:textSize="@dimen/text_size_large"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_sponsors_home_events"
                    android:layout_below="@+id/tv_home_sponsors"
                    android:paddingBottom="3dp"
                    tools:itemCount="2"

                    tools:listitem="@layout/home_sponsors_item"
                    />
            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_home_events"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/listitem_home_events"
                android:nestedScrollingEnabled="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FEEDS"
                android:paddingStart="@dimen/margin_padding_size_medium"
                android:paddingEnd="@dimen/margin_padding_size_medium"
                android:paddingBottom="@dimen/margin_padding_size_small"
                android:paddingTop="@dimen/margin_padding_size_small"
                android:textSize="@dimen/text_size_xlarge"
                android:textColor="@color/md_grey_50"
                android:fontFamily="@font/lora_bold"
                android:textStyle="bold"
                android:background="@color/bg_card_50_opac_black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_home_feeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/listitem_feed"
                android:nestedScrollingEnabled="false"
                />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>



